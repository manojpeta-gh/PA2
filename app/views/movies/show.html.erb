<p style="color: green;"><%= notice %></p>

<%= render @movie %>

<div style="margin-top: 20px;">
  <%= link_to "Edit this movie", edit_movie_path(@movie), style: "color: blue; font-weight: bold; text-decoration: none; background-color: #f9f9f9; padding: 10px; border-radius: 5px; border: 1px solid #ccc; margin-right: 10px;" %>
  <%= link_to "Back to movies", movies_path, style: "color: darkgreen; font-weight: bold; text-decoration: none; background-color: #f9f9f9; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" %>
  <%= button_to "Destroy this movie", @movie, method: :delete, data: { confirm: "Are you sure?" }, style: "color: red; font-weight: bold; background-color: #f9f9f9; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" %>
</div>
